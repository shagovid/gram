<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="#458930">
    <item android:state_enabled="true">
        <ripple android:color="#ff00ff">
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="0" android:endColor="?attr/colorPrimary" android:startColor="?attr/colorPrimaryVariant" />
                    <corners android:radius="25dp" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" />
            <gradient android:angle="0" android:endColor="?attr/colorPrimary" android:startColor="?attr/colorPrimaryVariant" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</selector>